if [ -z "$*" ]; then
    echo "No arguments passed. Exiting"
    exit 1
fi

echo "Enter file type extension you want to convert images to: "
read -r ext

if [ -z "$ext" ]; then
    exit 0
fi

for f in "$@" ; do
    # newname=$(echo "$f" | sed "s/\(.*\)\..*/\1.$ext/")
    newname="${f%.*}.$ext"
    magick "$f" "$newname"
done
